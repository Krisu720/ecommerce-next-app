// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id Int @id @default(autoincrement())
  title String @unique
  description String
  price Int
  quantity Int
  image String
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
}

model Promocode {
  id Int @id @default(autoincrement())
  name String @unique
  price Int
}