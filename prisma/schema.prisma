// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id String @id @default(uuid())
  title String @unique
  description String
  price Int
  image String
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  orders Order[]
}

model Order {
  id String @id @default(uuid())
  author User @relation(fields: [userId],references: [id])
  userId String
}

model Promocode {
  id String @id @default(uuid())
  name String @unique
  price Int
}